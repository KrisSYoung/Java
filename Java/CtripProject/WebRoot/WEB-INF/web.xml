<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>CtripProject</display-name>
  <servlet>
    <servlet-name>AddEmployee</servlet-name>
    <servlet-class>com.ctrip.controller.AddEmployee</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RetrieveEmployees</servlet-name>
    <servlet-class>com.ctrip.controller.RetrieveEmployees</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpateEmployee</servlet-name>
    <servlet-class>com.ctrip.controller.UpateEmployee</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowEmployees</servlet-name>
    <servlet-class>SaveEmployee.ShowEmployees</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddEmployee</servlet-name>
    <url-pattern>/AddEmployee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RetrieveEmployees</servlet-name>
    <url-pattern>/RetrieveEmployees</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpateEmployee</servlet-name>
    <url-pattern>/UpateEmployee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowEmployees</servlet-name>
    <url-pattern>/servlet/ShowEmployees</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.ctrip.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*r</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>